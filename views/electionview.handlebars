<div>
    <div class="col-lg-5 col-lg-offset-3 text-center panel panel-body">
        <h3>{{poll.title}}</h3> <br>
        {{#if poll.running}}
            <p style="left: 400px; position: absolute;">Status: Running</p>
        {{else}}
            <p style="left: 400px; position: absolute;">Status: Expired</p>
        {{/if}}
        
        <hr>
        <h5>{{poll.body}}</h5>
        
    </div>


    {{#each poll.panels}}
