<div class="row">
    <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2>{{poll.title}}</h2>
                    <hr>
                    <h4>{{poll.body}}</h4>
                    <div class='row'>
                    <div class="col-md-5 col-md-offset-3 text-center">
                        <div>
                            <canvas id="myChart" width="400" height="400"></canvas>
                            <br>
                            {{#each candidates}}
                            {{!-- <form action="/poll/{{this.parentPoll}}/{{this._id}}" method="post"> --}}
                            {{!-- <button type="submit"  id='{{this._id}}' class='btn-success pull-right btn-block' method='post'>  --}}

                            <div>
                                <h4>{{this.name}}</h4>
                            </div>
                            <h4>{{this.percent}}%</h4>
                            {{!-- </button> --}}
                            <br>
                            {{!-- </form> --}}
                            {{/each}}
                            
                            <script type="text/javascript"
                                src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
                            <script>
                                var ctx = document.getElementById("myChart");
                                var candidates = {{{candidatejs}}}
                                label = []
                                datas = []

                                for(i in candidates){
                                    label.push(candidates[i].name);
                                    datas.push(candidates[i].votedBy.length);
                                }

                                var myChart = new Chart(ctx, {
                                    type: 'pie',
                                    data: {
                                        labels: label,
                                        datasets: [{
                                            label: 'Percentage',
                                            data: datas,
                                            backgroundColor: [
                                                'rgb(255, 0, 0)',
                                                'rgb(0, 255, 0)',
                                                'rgb(0, 0, 255)',
                                                'rgb(255,255,0)',
                                                'rgb(0,255,255)',
                                                'rgb(255,0,255'
                                            ],
                                            borderColor: [
                                            'rgb(255,255,255)'
                                                
                                            ],
                                            borderWidth: 1
                                        }]
                                    },
                                });
                            </script>

                        </div>

                    </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    {{#if message}}
    <p>{{message}}</p>
    {{/if}}
    </div>
</div>
</div>
</div>
</div>
