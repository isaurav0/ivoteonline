<div class="container centered-form center-block">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h2>{{poll.title}}</h2><hr>
                            <h5>{{poll.body}}</h5>
                        </div>
                        
                        </div>
                        <div class="col-md-12 text-center">
                            <ul>
                            {{#each candidates}}
                                <li>{{this.name}}</li>
                            {{/each}}
                            </ul>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

