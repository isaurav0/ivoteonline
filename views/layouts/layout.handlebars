<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{host}}/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
    <title>Passport</title>
    <style>

      *{
        font-family: Oranda;
      }

        /*-- change navbar dropdown color --*/
      .navbar-default .navbar-nav .open .dropdown-menu>li>a,.navbar-default .navbar-nav .open .dropdown-menu {
        background: rgb(248, 248, 248);
        color: rgb(55,123,181) !important;
      }

      #nav > li:hover{
        color: rgb(55,123,181) !important;
      }

      .navbar{
        background: rgb(55,123,181);
        border: 0px;
        border-radius: 0;
        
      }
      .navbar *{
        font-family: Raleway;
        color: white !important;
      }

      body{
        background: rgb(248, 248, 248);
      }
    </style>
</head>
<body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">iVoteOnline</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          {{#if user}}
          <ul class="nav navbar-nav">
            {{!-- <li class="active"><a href="javascript:">{{ user.name }} <span class="sr-only">(current)</span></a></li> --}}
            {{!-- <li class="active"><a href="javascript:">  <span class="sr-only">(current)</span></a></li> --}}
          </ul>
          {{/if}}
          <ul class="nav navbar-nav navbar-right">
            {{#if user}}
                <li> <a class='navtext' href="/create">Create</a></li>
                <li> <a class='navtext' href="/mypolls">My Polls</a></li>
                <li class="dropdown">
                  <a href="javascript:" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{user.name}} <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a class='dropdown' href="/users/logout">Logout</a></li>
                  </ul>
                </li>
            {{else}}
                <li><a class='navtext' href="/users/login">Login</a></li>
                <li><a class='navtext' href="/users/register">Register</a></li>
                {{!-- <li><a href="/secret">Secret</a></li> --}}
                
            {{/if}}
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    
    {{{body}}}

    <script type="text/javascript" src="{{host}}/js/jquery.min.js"></script>
    <script type="text/javascript" src="{{host}}/js/bootstrap.min.js"></script>
 
</body>
